main = lift render (foldp (\x y -> step y) state (fps 24))

step : Array.Array (Array.Array number) -> Array.Array (Array.Array number)
step state = Array.fromList (map (\y ->
               Array.fromList (map (\x ->
                 if x == 0 || x == size - 1 || y == 0 || y == size - 1 then 0
                 else (
                   let s = sum (concatMap (\dy -> map (\dx ->
                             get (x+dx,y+dy) state
                           ) [-1..1]) [-1..1])
                   in if (s == 3 && get (x,y) state == 0) || ((s == 3 || s == 4) && get (x,y) state == 1) then 1 else 0
                 )
               ) [0..(size-1)])
             ) [0..(size-1)])

render state = collage 700 700 (justs (map (\x -> cell x state) locations))

cell (x,y) state = if get (x,y) state == 1 then
                     Just (move (pos (x,y)) (filled red (circle 4)))
                   else
                     Nothing

get (x,y) state = Array.getOrFail x (Array.getOrFail y state)

locations = concatMap (\x -> map (\y -> (x,y)) [0..(size-1)]) [0..(size-1)]

pos : (Int,Int) -> (Float,Float)
pos (x,y) = (toFloat (x*10)-200, toFloat (y*10)-200)


